{
  "version": 2,
  "name": "shopzone",
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "build": {
    "env": {
      "NPM_CONFIG_PRODUCTION": "false"
    },
    "command": "npm install --prefix frontend && npm run build --prefix frontend"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/server.js"
    }
  ]
}